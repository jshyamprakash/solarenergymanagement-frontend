# ============================================
# SOLAR ENERGY MONITORING SYSTEM - FRONTEND
# Environment Configuration Template
# ============================================

# --------------------------------------------
# API Configuration
# --------------------------------------------
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# --------------------------------------------
# Mock Data Strategy (Development)
# --------------------------------------------
VITE_USE_MOCK_DATA=true

# --------------------------------------------
# Google Maps API
# --------------------------------------------
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# --------------------------------------------
# WebSocket Configuration (Real-time updates)
# --------------------------------------------
VITE_WEBSOCKET_URL=http://localhost:3001
VITE_ENABLE_WEBSOCKET=true

# --------------------------------------------
# Application Configuration
# --------------------------------------------
VITE_APP_NAME=Solar Energy Monitoring System
VITE_APP_VERSION=1.0.0

# --------------------------------------------
# Feature Flags
# --------------------------------------------
VITE_ENABLE_REALTIME_UPDATES=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true

# --------------------------------------------
# Refresh Intervals (milliseconds)
# --------------------------------------------
VITE_DASHBOARD_REFRESH_INTERVAL=30000
VITE_DEVICE_STATUS_REFRESH_INTERVAL=10000

# --------------------------------------------
# Notes:
# --------------------------------------------
# 1. Copy this file to .env and fill in actual values
# 2. NEVER commit .env file to version control
# 3. All Vite env vars must be prefixed with VITE_
# 4. Set VITE_USE_MOCK_DATA=false when backend is ready
